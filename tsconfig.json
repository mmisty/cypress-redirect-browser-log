{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "importsNotUsedAsValues": "error",
    "types": ["node", "jest", "cypress"],
    "baseUrl": "./",
    "paths": {
      "cy-local": ["./src"],
      "cy-local/*": ["./src/*"]
    }
  },

  "include": ["src", "node_modules/jest-test-each/dist/index.d.ts"]
}
